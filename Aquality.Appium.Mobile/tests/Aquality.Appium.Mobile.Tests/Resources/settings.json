{
  "platformName": "android",
  "isRemote": true,
  "remoteConnectionUrl": "http://127.0.0.1:4723/wd/hub",

  "driverSettings": {
    "android": {
      "applicationPath": "./Resources/Apps/ApiDemos-debug.apk",
      "capabilities": {
        "deviceName": "Android Emulator",
        "automationName": "UIAutomator2",
        "eventTimings": true,
        "uiautomator2ServerInstallTimeout": 30000
      }
    },
    "ios": {
      "applicationPath": "./Resources/Apps/TestApp.app.zip",
      "capabilities": {
        "deviceName": "iOS Simulator",
        "automationName": "XCUITest",
        "platformName": "iOS",
        "udid": "<SIMULATOR_ID/DEVICE_ID>"
      }
    }
  },
  "localServiceSettings": {
    "arguments": {
      "--allow-insecure": "chromedriver_autodownload"
    },
    "capabilities": {
    }
  },
  "timeouts": {
    "timeoutImplicit": 0,
    "timeoutCondition": 15,
    "timeoutPollingInterval": 300,
    "timeoutCommand": 120
  },
  "retry": {
    "number": 2,
    "pollingInterval": 300
  },
  "logger": {
    "language": "en"
  },
  "elementCache": {
    "isEnabled": true
  }
}